<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VerifyPhoneActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="20dp"
        android:background="@color/green">
        <ImageView
            android:id="@+id/id_profile_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_action_verifing_user"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/id_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_profile_img"
            android:fontFamily="@font/bungee"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="20dp"
            android:text="Verify Phone Number"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/phoneNumberdec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter th veifiction code if not automatically authenticated"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_below="@+id/id_profile_name" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txt_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="50dp"
            android:text="Enter OTP" />
        <Button
            android:id="@+id/btn_verfy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Verfy"
            android:background="@color/green"/>

    </LinearLayout>


</LinearLayout>