<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlForgotPass"
    tools:context=".activity.ForgotPasswordActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_back_icon"
            android:padding="5dp"
            android:outlineAmbientShadowColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/make_selection"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textAllCaps="true"
            android:fontFamily="@font/archivo_black"
            android:layout_marginTop="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/make_changes_details"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:fontFamily="@font/archivo_black"
            android:layout_marginTop="0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="50dp"
            android:background="@color/light_white"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mobile_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_action_phone"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/mobile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIA SMS"
                android:textSize="25sp"
                android:fontFamily="@font/archivo_black"
                android:layout_marginRight="@+id/mobile_icon"
                android:layout_marginTop="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 999-888-6666"
                android:textSize="25sp"
                android:fontFamily="@font/archivo_black"
                android:layout_below="@+id/mobile_title"
                android:layout_marginRight="@+id/mobile_icon"
                android:layout_marginTop="25dp"/>

            <Button
                android:id="@+id/forgot_phone_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transperent"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="50dp"
            android:background="@color/light_white"
            android:padding="10dp">

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_action_email"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIA Email"
                android:textSize="25sp"
                android:fontFamily="@font/archivo_black"
                android:layout_marginRight="@+id/email_icon"
                android:layout_marginTop="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abc@gmail.com"
                android:textSize="25sp"
                android:fontFamily="@font/archivo_black"
                android:layout_below="@+id/email_title"
                android:layout_marginRight="@+id/email_icon"
                android:layout_marginTop="25dp"/>

            <Button
                android:id="@+id/forgot_email_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transperent"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>