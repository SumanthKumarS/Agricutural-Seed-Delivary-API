<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgotpassword.VerifyOTP">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="backActivity"
            android:src="@drawable/ic_action_close_icon"
            android:padding="5dp"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:text="@string/otp"
            android:textColor="@color/black"
            android:textSize="80dp"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:text="@string/verification"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/sent_otp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:layout_marginTop="50dp"
            android:text="Enter one time password sent To (999-999-9999)"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:textAlignment="center"/>
        <com.chaos.view.PinView
            android:id="@+id/otp_pinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:itemCount="6"
            app:itemWidth="50dp"
            app:itemHeight="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:lineColor="@color/black"
            android:itemBackground="@color/light_white"
            style="@style/PinWidget.PinView"
            android:inputType="number"
            android:cursorVisible="true"
            app:cursorColor="@color/black"
            app:hideLineWhenFilled="true"
            app:itemRadius="5dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:text="Verify Code"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:onClick="CallNextFromOTPScreen"
            android:textStyle="bold"/>
    </LinearLayout>

</ScrollView>